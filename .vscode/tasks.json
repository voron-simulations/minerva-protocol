{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"label": "protoc: build",
			"command": "protoc",
			"args": [
				"*.proto",
				"--csharp_out=out/csharp",
				"--java_out=out/java",
				"--python_out=out/python",
			],
			"problemMatcher": [
				"$gcc"
			],
			"dependsOn": [
				"format"
			]
		},
		{
			"type": "shell",
			"label": "clean",
			"command": "rm",
			"args": [
				"-rf",
				"out"
			],
			"problemMatcher": []
		},
		{
			"type": "shell",
			"label": "format",
			"command": "clang-format",
			"args": [
				"-i",
				"*.proto"
			],
			"problemMatcher": []
		}
	]
}
